# Seshat Configuration
# Generated automatically - customize as needed

project_type: typescript

# Commit defaults (equivalente a COMMIT_LANGUAGE, MAX_DIFF_SIZE, WARN_DIFF_SIZE)
commit:
  language: PT-BR
  max_diff_size: 5000
  warn_diff_size: 4000
  # provider: deepseek
  # model: deepseek-reasoner

# Pre-commit checks
checks:
  lint:
    enabled: true
    blocking: true
    auto_fix: true  # Change to true to fix automatically
    # detected: biome (npx @biomejs/biome check)
  test:
    enabled: true
    blocking: false
    # detected: vitest (npm run test)
  typecheck:
    enabled: true
    blocking: true
    # detected: tsc (npm run typecheck)

# AI Code Review
code_review:
  enabled: false
  blocking: false
  prompt: seshat-review.md  # Edite este arquivo!
  log_dir: seshat-logs
  extensions: [".ts", ".tsx", ".js", ".jsx", ".mjs", ".cjs"]  # extensões padrão detectadas

